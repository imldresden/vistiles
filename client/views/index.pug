doctype html
html
  head
    title= strings.title

    script(src="/static/lib/jquery/jquery-2.1.1.js")
    script(src="/static/lib/materialize/js/bin/materialize.min.js")
    script(src="/static/lib/materialize/extras/noUiSlider/nouislider.min.js")
    script(src="/static/lib/d3/d3.min.js")
    script(src="/static/lib/d3/d3.v4.min.js")
    script(src="/static/lib/scrollPrevent/scrollPrevent.js")
    script(src="/build/js/app.js")

    link(rel='stylesheet', href='/build/css/app.css',  media="screen,projection")
    link(rel='stylesheet', href='/static/lib/material-icons/material-icons.css')
    link(rel='stylesheet', href='/static/lib/materialize/extras/noUiSlider/nouislider.css', media="screen,projection")
    meta(name='viewport', content='width=device-width, initial-scale=1.0, user-scalable=no')
  #border
    #background
  #appContainer
    #app
    #tile-setup
  #branding= strings.branding
  #menuDiv
  #combinationMenu
    div.menu-content
    div.menu-control
      img(src='static/img/icons/collapse.svg')
  #workspaceMenu.modal
  #loading-overlay
    div.valign
      h4#loading-title= strings.loading.title
      include modules/spinner.pug
      i#loading-icon.material-icons.large(style="display: none") info
      p#loading-info= strings.loading.info
      button#loading-button.btn(style="display: none")= strings.loading.button
  #proximity-indicator(style="display: none")
    div.valign
      i#proximity-indicator-icon.material-icons.large link